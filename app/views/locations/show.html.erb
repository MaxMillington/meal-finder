

<article><br><br><br><br>
  <body>
  <!-- Page Content -->
  <div class="container">

    <!-- Heading Row -->
    <div class="row">
      <div class="col-md-8">
        <%= gmaps4rails(@json) %>
      </div>

      <!-- /.col-md-8 -->
      <div id="location-description" class="col-md-4 well">
        <h1><%= @location.name %></h1>
