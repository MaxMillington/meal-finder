        <p><%= @location.address %></p>
        <p><%= @location.phone_number %></p>
        <br>
        <br>
        <a class="btn btn-primary btn-lg" href="<%= locations_path %>">Back to All Locations</a>

      </div>
      <!-- /.col-md-4 -->
    </div>
    <!-- /.row -->

    <hr>
    <!-- Content Row -->

  </div>
  <!-- /.container -->

